# Database configuratie
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=jouw_wachtwoord
DB_NAME=rv_installatie
DB_PORT=3306

# JWT Secret (genereer een veilige random string)
JWT_SECRET=verander_dit_naar_een_veilige_random_string_van_minimaal_32_karakters

# Server configuratie
PORT=3001
